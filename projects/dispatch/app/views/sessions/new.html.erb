<title>Login</title>

<body class="page-main">
    
<div class="ui middle aligned center aligned fluid grid">
    <div class="left aligned eight wide computer fourteen wide tablet column">
         <div class="ui segment">

            <% flash.each do |message_type, message | %>
                <!--<div class="alert alert-<%= message_type %>"><%= message %></div> -->
                <%= content_tag(:div, message, class: "ui negative message alert alert-#{message_type}") %>
            <% end %>

            <div class="ui form">
                <h1>Login</h1>
                <%= form_for(:session, url: login_path) do | f | %> 

                    <div class="field">
                        <%= f.label :email %> 
                        <%= f.email_field :email %> 
                    </div>

                    <div class="field">
                        <%= f.label :password %> 
                        <%= f.password_field :password %> 
                    </div>

                    <div class="field">
                        <div class="ui checkbox">
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me, "Remember me on this computer" %>
                        </div>
                    </div>


                    <div class="ui primary button">
                        <%= f.submit "Log in" %> 
                    </div>

                <% end %> 

                <p> New to Dispatch? <%= link_to "Sign up now!", signup_path %> </p>
            </div>
        </div>
    </div>
</div>
