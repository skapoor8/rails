<p id="notice"><%= notice %></p>

<h1>Listing Incident Report Comments</h1>

<table>
  <thead>
    <tr>
      <th>Incident question answer</th>
      <th>Incident</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @report_comments.each do |report_comment| %>
      <tr>
        <td><%= report_comment.incident_question_answer %></td>
        <td><%= report_comment.incident %></td>
        <td><%= link_to 'Show', report_comment %></td>
        <td><%= link_to 'Edit', edit_report_comment_path(report_comment) %></td>
        <td><%= link_to 'Destroy', report_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

