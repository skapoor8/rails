<h1>Listing Incident Question Custom Answers</h1>

<table>
  <thead>
    <tr>
      <th>Incident question</th>
      <th>Answer</th>
      <th>Range value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @report_custom_comments.each do |report_custom_comment| %>
      <tr>
        <td><%= report_custom_comment.incident_question %></td>
        <td><%= report_custom_comment.answer %></td>
        <td><%= report_custom_comment.range_value %></td>
        <td><%= link_to 'Show', report_custom_comment %></td>
        <td><%= link_to 'Edit', edit_report_custom_comment_path(report_custom_comment) %></td>
        <td><%= link_to 'Destroy', report_custom_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

